{
    "env": {
        "browser": true,
        "es2022": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "google"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 180
            }
        ],
        "padding-line-between-statements": [
            "error",
            { "blankLine": "always", "prev": "*", "next": "multiline" },
            { "blankLine": "always", "prev": "multiline", "next": "*" }
          ],
        "func-style": "error",
        "semi": 2,
        "no-undef": 2,
        "no-use-before-define": 0,
        "quotes": 2,
        "indent": [
            "error",
            2
        ],
        "padded-blocks": 0,
        "no-empty": 2,
        "no-irregular-whitespace": 2,
        "prefer-const": 2,
        "consistent-return": 2,
        "eqeqeq": 2,
        "no-redeclare": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-magic-numbers": "error",
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "_"
            }
        ]
    },
    "parserOptions": {
        "sourceType": "module"
    }
}